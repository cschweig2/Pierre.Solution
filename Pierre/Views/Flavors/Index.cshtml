@{
    Layout = "_Layout";
}

@using Pierre.Models
@using System.Security.Claims
@model IEnumerable<Pierre.Models.Flavor>

<h1>@User.Identity.Name 's Flavors</h1>
<hr>
@if (Model.Any())
{
    <ul>
    @foreach (Flavor flavor in Model)
    {
        <li>@Html.ActionLink($"{flavor.FlavorType}", "Details", new { id = flavor.FlavorId })</li>
    }
    </ul>
}
else
{
    <h3>No flavors have been added yet</h3>
}
@if (User.Identity.IsAuthenticated)
{
    <p>@Html.ActionLink("Add a Flavor", "Create")</p>
}
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>