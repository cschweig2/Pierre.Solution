@{
    Layout = "_Layout";
}

@model Pierre.Models.Flavor

<h1>Add a Flavor</h1>
<hr>
@using (Html.BeginForm())
{
    @Html.Label("Flavor: ")
    @Html.TextBoxFor(model => model.FlavorType)
    <br>
    @Html.Label("Treat you would like this flavor to be added to: ")
    @Html.DropDownList("TreatId", " ")
    <br>
    <input type="submit" value="Add Flavor" class="btn btn-info">
}
<br>
<p>@Html.ActionLink("Back to Flavor List", "Index")</p>
<p>@Html.ActionLink("Back to Home Page", "Index", "Home")</p>