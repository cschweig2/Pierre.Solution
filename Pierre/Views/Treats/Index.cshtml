@{
    Layout = "_Layout";
}

@using Pierre.Models
@using System.Security.Claims
@model IEnumerable<Pierre.Models.Treat>

<h1>Treats</h1>
<hr>
@if (Model.Any())
{
    <ul>
    @foreach (Treat treat in Model)
    {
        <li>@Html.ActionLink($"{treat.TreatType}", "Details", new { id = treat.TreatId })</li>
    }
    </ul>
}
else
{
    <h3>No Treats have been added yet</h3>
}
<hr>
@if (User.Identity.IsAuthenticated)
{
    <p>@Html.ActionLink("Add a Treat", "Create")</p>
}
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>